<?xml version="1.0" ?>


<robot name="AMBER_Leg" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:property name="upper_arm_angle" value="50" />

  <xacro:property name="TO_RAD" value="${pi/180}"/>

  <xacro:property name="ANGLEu" value="${upper_arm_angle * TO_RAD}"/>

  <!-- LOWER LEG DIMENSIONS -->
  <xacro:property name="xu" value="1" />
  <xacro:property name="yu" value="0.27" />
  <xacro:property name="zu" value="0.221" />

  <!-- UPPER LEG DIMENSIONS -->
  <xacro:property name="xl" value="0.751" />
  <xacro:property name="yl" value="0.137" />
  <xacro:property name="zl" value="0.123" />

  <!-- Lower Leg Shift -->
  <xacro:property name="Ju" value="${xl * (2/5)}" /> <!-- Lower Leg Joint Shift -->
  <xacro:property name="xt" value="${Ju * cos(ANGLEu)}" /> <!-- LLJS Angle X-Shift -->
  <xacro:property name="zt" value="${Ju * sin(ANGLEu)}" /> <!-- LLJS Angle Z-Shift -->


  <xacro:macro name="amber_leg" params="id x y z joint dir">

  <!-- UPPER LEG -->
    <link name="upper_leg ${id}">
      <visual>
        <origin rpy="0 ${ANGLEu} 0" xyz="${x} ${y} ${z}"/>
        <geometry>
          <mesh filename="package://amber_sim/stl/UPLEG.stl" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0.1585"/>
        <geometry>
          <box size="0.0356 0.05 0.317"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0.1585"/>
        <mass value="0.29302326"/>
        <inertia ixx="0.00251484771035" ixy="0" ixz="0" iyy="0.00248474836108" iyz="0" izz="9.19936757328e-05"/>
      </inertial>
    </link>

    <joint name="knee_joint ${id}" type="revolute">
      <parent link="upper_leg ${id}"/>
      <child link="lower_leg ${id}"/>
      <dynamics damping="3.0" friction="0.3"/>
      <limit effort="30.0" lower="-1.57079632679" upper="1.57079632679" velocity="5.0"/>
      <!-- <origin rpy="0 0 0" xyz="0 0 0.317"/> -->
      <axis xyz="0 1 0"/>
    </joint>

  <!-- LOWER LEG -->
    <link name="lower_leg ${id}">
      <visual>
        <origin rpy="0 0 0" xyz="${x + xt + 0.3} ${y - 0.15*dir} ${z - zt - 0.03}"/>
        <geometry>
          <mesh filename="package://amber_sim/stl/LOWLEG.stl" scale="1 ${dir} 1"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0.101"/>
        <geometry>
          <box size="0.0356 0.05 0.202"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0.101"/>
        <mass value="0.21931466"/>
        <inertia ixx="0.000791433503053" ixy="0" ixz="0" iyy="0.000768905501178" iyz="0" izz="6.88531064581e-05"/>
      </inertial>
    </link>

    <joint name="hip_joint ${id}" type="revolute">
      <parent link="${joint}"/>
      <child link="upper_leg ${id}"/>
      <dynamics damping="3.0" friction="0.3"/>
      <limit effort="30.0" lower="-1.57079632679" upper="1.57079632679" velocity="5.0"/>
      <origin rpy="0 0 0" xyz="0 0 0.123"/>
      <axis xyz="0 1 0"/>
  </joint>

  </xacro:macro>

  <!--
  <xacro:amber_leg id="0" x="0" y="0" z="1" joint="head" dir="1"/>
  -->
</robot>