<?xml version="1.0" ?>


<robot name="AMBER_Leg" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:property name="upper_arm_angle" value="80" />

  <xacro:property name="TO_RAD" value="${pi/180}"/>

  <xacro:property name="ANGLEu" value="${upper_arm_angle * TO_RAD}"/>

  <!-- LOWER LEG DIMENSIONS -->
  <xacro:property name="xdu" value="1" />
  <xacro:property name="ydu" value="0.27" />
  <xacro:property name="zdu" value="0.221" />

  <!-- UPPER LEG DIMENSIONS -->
  <xacro:property name="xdl" value="0.751" />
  <xacro:property name="ydl" value="0.137" />
  <xacro:property name="zdl" value="0.123" />

  <!-- Lower Leg Shift -->
  <xacro:property name="Ju" value="${xdl * (2/5)}" /> <!-- Lower Leg Joint Shift -->
  <xacro:property name="xt" value="${Ju * cos(ANGLEu)}" /> <!-- LLJS Angle X-Shift -->
  <xacro:property name="zt" value="${Ju * sin(ANGLEu)}" /> <!-- LLJS Angle Z-Shift -->



  <xacro:macro name="amber_leg" params="id x y z joint dir">

    <!-- LOWER LEG POSITION -->
    <xacro:property name="xpl" value="${0.3}" />
    <xacro:property name="ypl" value="${y - 0.15*dir}" />
    <xacro:property name="zpl" value="${.03}" />
    <xacro:property name="xyzu" value="${xpu} ${ypu} ${zpu}" />

    <!-- UPPER LEG POSITION -->
    <xacro:property name="xpu" value="${x}" />
    <xacro:property name="ypu" value="${y}" />
    <xacro:property name="zpu" value="${z}" />
    <xacro:property name="xyzl" value="${xpl} ${ypl} ${zpl}" />

    
  <!-- UPPER LEG -->
    
    <link name="upper_leg ${id}">
      <visual>
        <origin rpy="0 ${ANGLEu} 0" xyz="${xyzu}"/>
        <material name="ul">
          <color rgba="0.6 0.6 0.6 1.0" />
        </material>
        <geometry>
          <mesh filename="package://amber_sim/stl/UPLEG.stl" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 ${ANGLEu} 0" xyz="${xyzu}"/>
        <geometry>
          <box size="${xdl} ${ydl} ${zdl}"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 ${ANGLEu} 0" xyz="${xyzu}"/>
        <mass value="1.624271"/>
        <inertia ixx="89413.852" ixy="6.821e-10" ixz="30343.48" 
                 iyy="99736.006" iyz="-1.705e-09" izz="17089.95"/>
      </inertial>
    </link>

    <joint name="knee_joint ${id}" type="continuous">
      <parent link="upper_leg ${id}"/>
      <child link="lower_leg ${id}"/>
      <dynamics damping=".1" friction="0.1"/>
      <origin rpy="0 0 0" xyz="${x + xt} 0 ${z - zt}"/>
      <axis xyz="0 1 0"/>
    </joint>

  <!-- LOWER LEG -->

    <link name="lower_leg ${id}">
      <visual>
        <origin rpy="0 0 0" xyz="${xyzl}"/>
        <material name="ll">
          <color rgba="0.6 0.6 0.7 1.0" />
        </material>
        <geometry>
          <mesh filename="package://amber_sim/stl/LOWLEG.stl" scale="1 ${dir} 1"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="${xyzl}"/>
        <geometry>
          <box size="${xdl} ${ydl} ${zdl}"/>
        </geometry>
      </collision>
      <inertial>
        <origin rpy="0 0 0" xyz="${xyzl}"/>
        <mass value="3.442209"/>
        <inertia ixx="32621.012" ixy="6974.557" ixz="5690.275" 
                 iyy="3.402e+05" iyz="-483.578" izz="3.343e+05"/>
      </inertial>
    </link>

    <joint name="hip_joint ${id}" type="fixed">
      <parent link="${joint}"/>
      <child link="upper_leg ${id}"/>
      <dynamics damping="3.0" friction="0.3"/>
      <limit effort="30.0" lower="-1.57079632679" upper="1.57079632679" velocity="5.0"/>
      <origin rpy="0 0 0" xyz="0 0 0.123"/>
      <axis xyz="0 1 0"/>
  </joint>

  </xacro:macro>

  <!--
  <xacro:amber_leg id="0" x="0" y="0" z="1" joint="head" dir="1"/>
  -->
</robot>